---
interface Clip {
  text: string
  url: string
}

interface BoxerClipProps {
  clips?: Clip[]
}

const { clips = [] } = Astro.props as BoxerClipProps
---

<ul class="animate-fade-in text-theme-raisin-white flex w-full flex-col gap-4 text-4xl">
  {
    clips.map((clip) => (
      <li>
        <a
          href={clip.url}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-theme-raisin-black/40 hover:bg-theme-tickle-me-pink/45 flex items-center justify-center space-y-6 rounded-xl p-4 text-white backdrop-blur-sm transition"
        >
          "{clip.text}"
        </a>
      </li>
    ))
  }
</ul>