---
import type { Fighters } from '@/types/fighters';

const { id, realName, age, height, weight, city, country, birthDate } = Astro.props as Fighters;
---
<div class="group-hover animate-fade-in">
    <div class="relative flex flex-col items-center rounded-xl bg-gradient-to-b from-theme-raisin-black/40 to-theme-tickle-me-pink/40 border-2 border-theme-tickle-me-pink/70 p-6 text-white transition-transform duration-500 ease-in-out hover:brightness-105  hover:scale-102 group"

    >
      <!-- Imagen de la tarjeta en la esquina superior izquierda -->
      <img
        src={`/images/fighters/cards/${id}.webp`}
        alt={`Tarjeta de ${realName}`}
        class="absolute top-6 left-8 h-20 w-20 rounded-lg object-cover shadow-md"
      />
    
      <!-- Contenido principal -->
      <div class="ml-28">
        <!-- Nombre real -->
        <h1 class="text-2xl font-bold stat-item text-center">{realName}</h1>
    
        <!-- Bandera -->
        <div class="mt-2 stat-item flex justify-center">
          <img
            src={`/images/flags/${country}.webp`}
            alt={`Bandera de ${country}`}
            class="h-8 w-8 rounded-full"
          />
        </div>
    
        <!-- Estadísticas -->
        <div class="mt-4 grid grid-cols-2 gap-4 text-center">
          <div class="stat-item">
            <div class="text-sm text-gray-400">Edad</div>
            <div class="text-lg">{age} años</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Altura</div>
            <div class="text-lg">{height}m</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Peso</div>
            <div class="text-lg">{weight}kg</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Ciudad</div>
            <div class="text-lg">{city}</div>
          </div>
        </div>
    
        <!-- Fecha de nacimiento -->
        <div class="mt-4 text-center stat-item">
          <div class="text-sm text-gray-400">Fecha de nacimiento</div>
          <div class="text-lg">{birthDate}</div>
        </div>
      </div>
    </div>

</div>


<style>
/* Efecto de "pulse border" */
.group:hover {
  border-color: rgba(255, 20, 147, 0.7);
  animation: pulseBorder 2s infinite cubic-bezier(0.66, 0, 0, 1);
}

@keyframes pulseBorder {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 20, 147, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(255, 20, 147, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 20, 147, 0);
  }
}

/* Animación de fade-in para las estadísticas */
.stat-item {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

.stat-item:nth-child(1) {
  animation-delay: 0.1s;
}
.stat-item:nth-child(2) {
  animation-delay: 0.2s;
}
.stat-item:nth-child(3) {
  animation-delay: 0.3s;
}
.stat-item:nth-child(4) {
  animation-delay: 0.4s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

</style>
